{
  "name": "cervello",
  "version": "0.9.0",
  "description": "Simplest and trully reactive state manager for React",
  "main": "./dist/cervello.cjs",
  "module": "./dist/cervello.esm.js",
  "unpkg": "./dist/cervello.umd.js",
  "type": "module",
  "source": "src/index.ts",
  "types": "./types/index.d.ts",
  "exports": {
    "browser": "./dist/cervello.esm.js",
    "import": "./dist/cervello.esm.js",
    "umd": "./dist/cervello.umd.js",
    "require": "./dist/cervello.cjs",
    "default": "./dist/cervello.modern.js"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chempogonzalez/cervello.git"
  },
  "sideEffects": false,
  "keywords": [
    "state",
    "manager",
    "reactive",
    "react",
    "immutable",
    "observable",
    "global",
    "local"
  ],
  "author": "Chempo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chempogonzalez/cervello/issues"
  },
  "homepage": "https://github.com/chempogonzalez/cervello#readme",
  "peerDependencies": {
    "react": "^17.0.2",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@types/eslint": "8.2.0",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-standard-jsx": "10.0.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "eslint-plugin-react": "7.27.1",
    "microbundle": "0.14.2",
    "react": "17.0.2",
    "rxjs": "7.4.0",
    "typescript": "4.5.2"
  }
}

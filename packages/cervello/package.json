{
  "name": "@cervello/react",
  "version": "0.12.1",
  "description": "ðŸ¤¯ Simplest and truly reactive state manager for React",
  "main": "./dist/cervello.cjs",
  "module": "./dist/cervello.esm.js",
  "unpkg": "./dist/cervello.umd.js",
  "type": "module",
  "source": "src/index.ts",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/cervello.esm.js",
      "import": "./dist/cervello.esm.js",
      "umd": "./dist/cervello.umd.js",
      "require": "./dist/cervello.cjs",
      "default": "./dist/cervello.modern.js"
    },
    "./types": {
      "browser": "./types/index.d.ts",
      "import": "./types/index.d.ts",
      "require": "./types/index.d.ts",
      "default": "./types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "release": "pnpx bumpp --push=false && npm publish --access public",
    "test": "vitest --watch",
    "prepublishOnly": "pnpm build",
    "build": "(rm -rf types & rm -rf dist) && microbundle --alias @observable-lib=../observable-lib/src/index.ts",
    "dev": "microbundle watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chempogonzalez/cervello.git"
  },
  "sideEffects": false,
  "keywords": [
    "react",
    "state",
    "manager",
    "management",
    "redux",
    "zustand",
    "reactive",
    "observable",
    "global",
    "local"
  ],
  "author": "Chempo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chempogonzalez/cervello/issues"
  },
  "homepage": "https://github.com/chempogonzalez/cervello#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "rxjs": ">= 7.4.0"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@chempo/ec-linter": "^1.0.10",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/react": "^13.3.0",
    "@types/react": "18.0.18",
    "@types/use-sync-external-store": "^0.0.3",
    "microbundle": "0.15.1",
    "react": "18.2.0",
    "rxjs": "7.5.6",
    "typescript": "4.8.2",
    "vitest": "^0.23.1",
    "vitest-react": "^0.9.5"
  }
}
